---
// src/components/ProductCard.astro
const { product } = Astro.props;
---


<div class="bg-slate-600 m-2 grid grid-cols-4 rounded-md">
  <img src={product.imagen} alt="imagen del producto" />

  <div class="col-span-3 p-3">
    <p>{product.descripcion}</p>

    <div class="grid grid-cols-2 p-4">
      <p class="text-start"></p>

      <p class="text-end">Disponibles: {product.cantidad_en_stock}</p>

      <p class="text-end col-span-2">Precio: ${product.precio}</p>

      <button
        type="button"
        class="bg-cyan-400 ml-auto col-start-2 mt-4 py-2 rounded-lg hover:bg-black w-1/2 flex items-center justify-center gap-2 active:scale-95"
      >
        Comprar
      </button>
    </div>
  </div>
</div>

